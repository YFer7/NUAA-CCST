/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: rgb(0, 0, 10);
  opacity: 0.5;
  overflow: hidden;
}
/*content*/
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: rgb(250, 250, 250);
  margin: -150px 20rpx 0 50rpx;
  border-radius: 3px;
}
.drawer_title{
  padding:20px;
  font: 20px "microsoft yahei";
  text-align: center;
}
.xiugai
{
  position: absolute;
  top:30rpx;
  right:20rpx;
  font-size: 26rpx;
  font-style: italic;
  border: 1px solid blue;
  border-right:0;
  border-radius: 10%;
  
}
.drawer_content {
  height: 120px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
